{
  "info": {
    "_postman_id": "rateit-user-collection",
    "name": "Rate It - User APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Official Postman collection for Rate It - USER APIs. Includes Onboarding and Auth endpoints."
  },
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000" },
    { "key": "api_version", "value": "v1" },
    { "key": "user_token", "value": "" },
    { "key": "user_base", "value": "{{base_url}}/api/{{api_version}}/user" }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Collection pre-request: ensure base_url is set",
          "if (!pm.variables.get('base_url')) {",
          "    throw new Error('base_url is not set in environment or collection variables. Set {{base_url}} to continue.');",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "item": [
    {
      "name": "User - Onboarding",
      "item": [
        {
          "name": "GET Onboarding Screens",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "X-Lang", "value": "en" }
            ],
            "url": {
              "raw": "{{user_base}}/onboarding-screens",
              "host": ["{{user_base}}"],
              "path": ["onboarding-screens"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', function(){ pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test('success true', function(){ pm.expect(json.success).to.eql(true); });",
                  "pm.test('data is array and <=3', function(){ pm.expect(json.data).to.be.an('array'); pm.expect(json.data.length).to.be.at.most(3); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "User - Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "X-Lang", "value": "en" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"Test User\",\n  \"phone\": \"+201000000000\",\n  \"email\": \"test@example.com\",\n  \"birth_date\": \"1998-01-01\",\n  \"gender\": \"male\",\n  \"nationality\": \"Egyptian\",\n  \"password\": \"Password123!\",\n  \"password_confirmation\": \"Password123!\"\n}"
            },
            "url": { "raw": "{{user_base}}/auth/register", "host": ["{{user_base}}"], "path": ["auth","register"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', function(){ pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test('success true', function(){ pm.expect(json.success).to.eql(true); });",
                  "if (json.data && json.data.token) { pm.environment.set('user_token', json.data.token); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "X-Lang", "value": "en" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+201000000000\",\n  \"password\": \"Password123!\"\n}" },
            "url": { "raw": "{{user_base}}/auth/login", "host": ["{{user_base}}"], "path": ["auth","login"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', function(){ pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test('success true', function(){ pm.expect(json.success).to.eql(true); });",
                  "if (json.data && json.data.token) { pm.environment.set('user_token', json.data.token); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "X-Lang", "value": "en" },
              { "key": "Authorization", "value": "Bearer {{user_token}}" }
            ],
            "url": { "raw": "{{user_base}}/auth/me", "host": ["{{user_base}}"], "path": ["auth","me"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', function(){ pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test('success true', function(){ pm.expect(json.success).to.eql(true); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "X-Lang", "value": "en" },
              { "key": "Authorization", "value": "Bearer {{user_token}}" }
            ],
            "url": { "raw": "{{user_base}}/auth/logout", "host": ["{{user_base}}"], "path": ["auth","logout"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', function(){ pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test('success true', function(){ pm.expect(json.success).to.eql(true); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Forgot Password - Send OTP",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "X-Lang", "value": "en" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+201000000000\"\n}" },
            "url": { "raw": "{{user_base}}/auth/forgot-password/send-otp", "host": ["{{user_base}}"], "path": ["auth","forgot-password","send-otp"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', function(){ pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test('success true', function(){ pm.expect(json.success).to.eql(true); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Forgot Password - Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "X-Lang", "value": "en" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+201000000000\",\n  \"otp\": \"1234\"\n}" },
            "url": { "raw": "{{user_base}}/auth/forgot-password/verify-otp", "host": ["{{user_base}}"], "path": ["auth","forgot-password","verify-otp"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', function(){ pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test('success true', function(){ pm.expect(json.success).to.eql(true); });",
                  "if (json.data && json.data.reset_token) { pm.environment.set('reset_token', json.data.reset_token); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Forgot Password - Reset",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "X-Lang", "value": "en" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+201000000000\",\n  \"reset_token\": \"{{reset_token}}\",\n  \"new_password\": \"NewPassword123!\",\n  \"new_password_confirmation\": \"NewPassword123!\"\n}" },
            "url": { "raw": "{{user_base}}/auth/forgot-password/reset", "host": ["{{user_base}}"], "path": ["auth","forgot-password","reset"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', function(){ pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test('success true', function(){ pm.expect(json.success).to.eql(true); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ]
}
