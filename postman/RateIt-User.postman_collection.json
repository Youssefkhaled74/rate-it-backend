{
  "info": {
    "_postman_id": "rateit-user-collection",
    "name": "Rate It - User APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for USER APIs (Rate It). Organized into implemented and planned endpoints."
  },
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000" },
    { "key": "api_version", "value": "v1" },
    { "key": "user_token", "value": "" },
    { "key": "branch_qr", "value": "" },
    { "key": "voucher_code", "value": "" }
  ],
  "item": [
    {
      "name": "Public / Guest",
      "item": [
        {
          "name": "GET Onboarding Screens",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "X-Lang", "value": "en", "description": "ar or en" }
            ],
            "url": {
              "raw": "{{base_url}}/api/{{api_version}}/user/onboarding-screens",
              "host": ["{{base_url}}"],
              "path": ["api", "{{api_version}}", "user", "onboarding-screens"]
            }
          },
          "response": [
            {
              "name": "Success - 200",
              "originalRequest": {},
              "status": "OK",
              "code": 200,
              "body": "{\n  \"success\": true,\n  \"message\": \"Onboarding screens\",\n  \"data\": [\n    { \"id\": 1, \"title\": \"Now... Rate the World from Your Phone\", \"body\": \"You have the chance...\", \"sort_order\": 1 },\n    { \"id\": 2, \"title\": \"First 100% Specialized Rating App\", \"body\": \"The 21st century...\", \"sort_order\": 2 },\n    { \"id\": 3, \"title\": \"Your Participation Makes the Difference\", \"body\": \"Your opinion matters...\", \"sort_order\": 3 }\n  ],\n  \"meta\": null\n}"
            }
          ],
          "description": "Returns active onboarding screens (max 3)."
        }
      ]
    },
    {
      "name": "Auth (OTP)",
      "item": [
        {
          "name": "POST Request OTP (Planned)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+201234567890\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/{{api_version}}/user/auth/request-otp" }
          },
          "response": [
            {
              "name": "Success - 200",
              "code": 200,
              "body": "{ \"success\": true, \"message\": \"OTP sent\", \"data\": null, \"meta\": null }"
            },
            {
              "name": "Validation - 422",
              "code": 422,
              "body": "{ \"success\": false, \"message\": \"Validation error\", \"data\": {\"phone\":[\"The phone field is required.\"]}, \"meta\": null }"
            }
          ],
          "description": "Planned: request OTP to phone number."
        },
        {
          "name": "POST Verify OTP (Planned)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+201234567890\",\n  \"otp\": \"123456\"\n}" },
            "url": { "raw": "{{base_url}}/api/{{api_version}}/user/auth/verify-otp" }
          },
          "description": "Planned: verify OTP and return token."
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "POST Create Review (Planned)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{user_token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"branch_id\": 12,\n  \"overall_rating\": 4.5,\n  \"comment\": \"Great!\"\n}" },
            "url": { "raw": "{{base_url}}/api/{{api_version}}/user/reviews" }
          },
          "description": "Planned: create a review (authenticated)."
        },
        {
          "name": "POST Upload Review Photos (Planned)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "multipart/form-data" },
              { "key": "Authorization", "value": "Bearer {{user_token}}" }
            ],
            "body": { "mode": "formdata", "formdata": [ { "key": "photos[]", "type": "file" } ] },
            "url": { "raw": "{{base_url}}/api/{{api_version}}/user/reviews/upload-photos" }
          },
          "description": "Planned: upload photos for a review (max 3)."
        }
      ]
    },
    {
      "name": "Loyalty Points",
      "item": [
        { "name": "GET Points Balance (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/points" } } },
        { "name": "GET Points Transactions (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/points/transactions" } } }
      ]
    },
    {
      "name": "Vouchers",
      "item": [
        { "name": "GET My Vouchers (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/vouchers" } } },
        { "name": "GET Voucher Details by Code (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/vouchers/{{voucher_code}}" } } }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        { "name": "GET My Notifications (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/notifications" } } },
        { "name": "PATCH Mark As Read (Planned)", "request": { "method": "PATCH", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/notifications/mark-read" } } }
      ]
    },
    {
      "name": "Subscription",
      "item": [
        { "name": "GET Subscription Status (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/subscription" } } },
        { "name": "POST Subscribe / Renew (Planned)", "request": { "method": "POST", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/subscription" } } }
      ]
    },
    {
      "name": "Planned Endpoints (Misc)",
      "item": [
        { "name": "GET Categories (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/categories" } } },
        { "name": "GET Featured Places (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/places/featured" } } },
        { "name": "GET Place Details (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/places/{place_id}" } } },
        { "name": "GET Search Suggestions (Planned)", "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/{{api_version}}/user/search" } } }
      ]
    }
  ]
}
